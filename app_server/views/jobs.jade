extends layout
block content
  #banner.page-header
    .row
      .col-lg-6
       a.hyperlinks(href='/') Начало 
       h1.title Списък с обяви за работа
         small &nbsp;
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each employer in employers
          .col-xs-12.list-group-item
            h4.list
             a(href='/jobs/#{employer.value._id}')
              p Вакантна позиция в #{employer.value.companyName}, #{employer.value.location}
              small &nbsp;
    .col-xs-12.col-sm-4 
      p.lead= sidebar
  .container
